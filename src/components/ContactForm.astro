<section id="contact" class="max-w-(--max-width) mx-auto px-6 py-12">
  <h3 class="text-xl font-bold mb-4">Contact</h3>
  <form method="POST" action="/api/contact" class="grid gap-4 max-w-xl">
    <input
      type="text"
      name="name"
      placeholder="Your name"
      required
      class="border rounded p-3"
    />
    <input
      type="email"
      name="email"
      placeholder="Email"
      required
      class="border rounded p-3"
    />
    <textarea
      name="message"
      placeholder="Message"
      rows="6"
      required
      class="border rounded p-3">
    </textarea>
    <button type="submit" class="bg-black text-white px-4 py-2 rounded">
      Send
    </button>
  </form>
</section>
