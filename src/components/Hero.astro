---
import { Image } from "astro:assets";
import hero from "../images/contract-hero.png";

const heroImageHeight = 1000;
---

<section
  class="max-w-(--max-width) mx-auto px-6 text-black relative min-h-120 flex py-10 overflow-hidden">
  <div class="text-left w-[50%] flex flex-col justify-center pr-6 flex-1">
    <!-- text container -->
    <div class="relative -top-10">
      <h1 class="text-4xl md:text-5xl font-extrabold font-heading">
        Stop Chasing Leads.<br />Start Closing Jobs.
      </h1>
      <p class="text-lg mt-3 font-body">
        Qualified clients, booked appointments, and 5-star reviews â€“ <span
          class="italic">
          while you sleep.
        </span>
      </p>
    </div>
  </div>

  <div class="flex justify-center gap-6 items-end w-1/2 relative right-0 -z-10">
    <Image
      src={hero}
      width={heroImageHeight}
      height={heroImageHeight}
      alt="buildings"
    />
  </div>
</section>
