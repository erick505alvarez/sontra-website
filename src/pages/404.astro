---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="404 - Page Not Found">
  <Header />
  <main class="flex-1 flex items-center justify-center">
    <div class="text-center max-w-xl mx-auto px-6">
      <h1 class="text-6xl md:text-8xl font-bold font-heading mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl font-semibold mb-4">Page Not Found</h2>
      <p class="text-gray-600 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-block bg-black text-white px-6 py-3 rounded-lg font-medium hover:bg-gray-800 transition-colors">
        Go Back Home
      </a>
    </div>
  </main>
  <Footer />
</BaseLayout>
